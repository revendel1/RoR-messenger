<!-- Форма для создания новых сообщений-->
<%= form_with(model: message, local: true) do |form| %>
  <% if message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(message.errors.count, "error") %> prohibited this message from being saved:</h2>

      <ul>
        <% message.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :chat_id, value: chat.id %>

  <div class="input-group">
    <%= form.text_field :content, placeholder: "Сообщение", class: 'form-control mr-2' %>
    <div>
      <label class="btn btn-default btn-change-avatar">
      Прикрепить файл
        <span style="display:none;">
          <%= form.file_field :file, class: "btn" %>
        </span>
      </label>
    </div>
    <div class="input-group-append">
      <%= form.submit "Отправить", class: "btn btn-primary", id: 'chat-btn' %>
    </div>
  </div>

<% end %>
